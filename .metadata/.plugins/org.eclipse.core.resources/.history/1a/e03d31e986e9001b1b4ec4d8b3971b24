#include <stdio.h>
float countWage(float income, float months, float daysInMonths,
			  float hoursInDay, float bonus,float premium, float rise, float actuallyWorkedHours);
float countRisePay(float rise, float months);
float countOverTime(float totalHours, float months, float daysInMonths, float hoursInDay);
float countOverTimePay(float totalHours,float months, float daysInMonths, float hoursInDay, float wage);
float countBonusPay(float salary, float bonus);
float countRegularHours(float months, float daysInMonths, float hoursInDay);

int main()
{
	float res = countWage(39000, 3, 20, 8, 30, 0, 520, 480);
	printf("%d", res);
	return 0;
}

float countWage(float income, float months, float daysInMonths,
			  float hoursInDay, float bonus,float premium, float rise, float actuallyWorkedHours)
{
	//wage = (income - risePay - overTimePay - premium - bonusPay),
	float res = (income - countRisePay(rise, months)-premium)
			    /(countRegularHours(months,daysInMonths,hoursInDay)
			    		+countRegularHours(months,daysInMonths,hoursInDay)*bonus/100
			    		 	 +countOverTime(actuallyWorkedHours,months,daysInMonths,hoursInDay)*2);
	return res;
}
float countRisePay(float rise, float months)
{
	float res = rise * months;
	return res;
}
float countOverTime(float totalHours, float months, float daysInMonths, float hoursInDay)
{
	float res = totalHours - countRegularHours(months,daysInMonths,hoursInDay);
	if (res<0){res = 0;}
	return res;
}
float countOverTimePay(float totalHours,float months, float daysInMonths, float hoursInDay, float wage)
{
	float res = countOverTime(totalHours, months, daysInMonths, hoursInDay) * wage * 2;
	return res;
}
float countBonusPay(float salary, float bonus)
{
	float res = salary * bonus / 100;
	return res;
}

float countRegularHours(float months, float daysInMonths, float hoursInDay)
{
	float res = months * daysInMonths * hoursInDay;;
	return res;
;
}
