#include <stdio.h>
#include <stdlib.h>

struct worker
{
	char name[50];
	float rate_in_hour;
	float bonus_in_month;
	float premium;

}p1, p2, p3;

worker init(struct worker employee);
void init2(struct worker &employee);

int main()
{
	p1 = init(p1);
	printf("Имя работника %50s \n", p1.name);
	printf("Cтавка ($ вчас) %f\n", p1.rate_in_hour);
	printf("% бонуса %f\n", p1.bonus_in_month);
	printf("Премию %f\n", p1.premium);

	init2(p1);
	printf("Имя работника %50s \n", p1.name);
	printf("Cтавка ($ вчас) %f\n", p1.rate_in_hour);
	printf("% бонуса %f\n", p1.bonus_in_month);
	printf("Премию %f\n", p1.premium);
	return 0;
}

worker init(struct worker employee)
{
	printf("Введите имя работника\n");
	scanf_s("%50s", employee.name, (unsigned)_countof(employee.name));
	printf("Введите ставку ($ вчас)\n");
	scanf_s("%f", &employee.rate_in_hour);
	printf("Введите % бонуса\n");
	scanf_s("%f", &employee.bonus_in_month);
	printf("Введите премию\n");
	scanf_s("%f", &employee.premium);
	return employee;
}

void init2(struct worker &employee)
{
	printf("Введите имя работника\n");
	scanf_s("%50s", employee.name, (unsigned)_countof(employee.name));
	printf("Введите ставку ($ вчас)\n");
	scanf_s("%f", &employee.rate_in_hour);
	printf("Введите % бонуса\n");
	scanf_s("%f", &employee.bonus_in_month);
	printf("Введите премию\n");
	scanf_s("%f", &employee.premium);
}
