#include <stdio.h>
int countWage();
int countRisePay(int rise, int months);
int countOverTime(int totalHours, int months, int daysInMonths, int hoursInDay);
int countOverTimePay(int totalHours, int wage);
int countBonusPay(int salary, int bonus);
int countRegularHours(int months, int daysInMonths, int hoursInDay);

int main()
{

	return 0;
}

int countWage(int income, int months, int daysInMonths,
			  int hoursInDay, int bonus,int premium,int totalDay, int rise)
{
	//wage = (income - risePay - overTimePay - premium - bonusPay),
	int res = income - countRisePay(rise, months)
		    	-countOverTimePay(totalDay*8,0)-premium
		    	-countBonusPay(countRegularHours(3,20,8),30);
	return res;
}
int countRisePay(int rise, int months)
{
	int res = rise * months;
	return res;
}
int countOverTime(int totalHours, int months, int daysInMonths, int hoursInDay)
{
	int res = tatalHours - countRegularHours(months,daysInMonths,hoursInDay);
	return res;
}
int countOverTimePay(int totalHours, int wage)
{
	int res = countOverTime(totalHours) * wage * 2;
	return res;
}
int countBonusPay(int salary, int bonus)
{
	int res = salary * bonus / 100;
	return res;
}

int countRegularHours(int months, int daysInMonths, int hoursInDay)
{
	res = months * daysInMonth * hoursInDay;;
	return res;
;
}
